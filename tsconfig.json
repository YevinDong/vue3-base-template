{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@": ["src"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/utils/flexible.js","typings"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "suppressImplicitAnyIndexErrors":true
}
